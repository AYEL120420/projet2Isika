@model _001JIMCV.ViewModels.JourneyViewModel
@{
    Layout = "_LayoutJimcv";
}
@section ExtraCss{
    <link rel="stylesheet" type="text/css" href="~/Css/FullPackage.css" link />

}
<div class="container" style="margin: 30px 150px">
    <div style="display: flex; align-items: center">
        <div class="image-container">
            <img src="@Model.Journey.ImagePath" alt="Image du produit">
        </div>
        <div style="width:60%">
            <div class="description-section">
                <h3>@Html.DisplayFor(model => model.Journey.CountryDestination) - @Html.DisplayFor(model => model.Journey.CityDestination)  </h3>
                <p>@Html.DisplayFor(model => model.Journey.Description)</p>
            </div>
        </div>
    </div>
     
    
    <div style="display:flex">
        
        <div style="width:50%">

            <div class="product-description">
                <div>
                    <h4>Vols</h4>
                </div>
                <div>
                    <span><strong>Compagnie aérienne : </strong> @Html.DisplayFor(model => model.DepartureFlight.Airline)</span>
                    <span><strong>Ville de départ : </strong>@Html.DisplayFor(model => model.DepartureFlight.DepartureCity)</span>
                    <span><strong>Ville d'arrivée : </strong>@Html.DisplayFor(model => model.DepartureFlight.DestinationCity)</span>
                    <span><strong>Date : </strong>@Html.DisplayFor(model => model.DepartureFlight.DepartureDate)</span>
                    <span><strong>N° de vol : </strong>@Html.DisplayFor(model => model.DepartureFlight.FlightNumber)</span>
                </div>
                <br />
                <div>
                    <span><strong>Compagnie aérienne :</strong>>@Html.DisplayFor(model => model.ReturnFlight.Airline)</span>
                    <span><strong>Ville de départ : </strong>@Html.DisplayFor(model => model.ReturnFlight.DepartureCity)</span>
                    <span><strong>Ville d'arrivée : </strong>@Html.DisplayFor(model => model.ReturnFlight.DestinationCity)</span>
                    <span><strong>Date : </strong>@Html.DisplayFor(model => model.ReturnFlight.DepartureDate)</span>
                    <span><strong>N° de vol : </strong>@Html.DisplayFor(model => model.ReturnFlight.FlightNumber)</span>
                </div>
            </div>
            <div class="product-description">
                <div class="description-section">
                    <h4>Hébergements</h4>
                </div>
                @foreach (var accommodation in Model.Accommodations)
                {
                    <div>
                        <span>
                            <strong>Nom : </strong>

                    @accommodation.Name

                    </span>
                        <span>
                            <strong>Type : </strong>

                    @accommodation.Type

                    </span>
                        <span>
                            <strong>Ville : </strong>

                    @accommodation.City

                    </span>
                        <span>
                            <strong>Adresse : </strong>

                    @accommodation.Adress

                    </span>
                    </div>
                    <div>
                        <strong>Description : </strong>
                        @accommodation.Description
                    </div>

                    <br />

                }
            </div>

        </div>

        <div style="width:50%">

            <div class="product-description">
                <div class="description-section">
                    <h3>Activités</h3>
                </div>
                @foreach (var activity in Model.Activities)
                {
                    <div>
                        <span>
                            <strong>Nom : </strong>

                    @activity.Name

                    </span>
                        <span>
                            <strong>Ville : </strong>

                    @activity.City

                    </span>
                        <span>
                            <strong>Adresse : </strong>

                    @activity.Adress

                    </span>
                    </div>
                    <div>
                        <strong>Description : </strong>
                        @activity.Description
                    </div>
                    <br />

                }
            </div>
            <div class="product-description">
                <div class="description-section">
                    <h3>Restaurants</h3>
                </div>
                @foreach (var restaurants in Model.Restaurations)
                {
                    <div>
                        <span>
                            <strong>Nom : </strong>

                    @restaurants.Name

                    </span>
                        <span>
                            <strong>Type :</strong>

                    @restaurants.Type

                    </span>
                        <span>
                            <strong>Ville : </strong>

                    @restaurants.City

                    </span>
                        <span>
                            <strong>Adresse : </strong>

                    @restaurants.Adress

                    </span>
                    </div>
                    <div>
                        <strong>Description : </strong>
                        @restaurants.Description
                    </div>
                    <br />

                }
            </div>

        </div>

        
    </div>


    <div>
        <button onclick="window.location.href='@Url.Action("ReservationAllInclusive","Journey", new { @Id = @Model.Journey.Id })'">Réserver ce voyage</button>
        <button onclick="window.location.href='@Url.Action("DisplayJourneyPerso","Journey", new { @Id = @Model.Journey.Id })'">Personnaliser votre voyage</button>
    </div>

</div>