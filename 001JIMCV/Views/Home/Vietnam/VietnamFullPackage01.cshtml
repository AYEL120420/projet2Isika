@{
    Layout = "_LayoutJimcv";
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Vietnam</title>
    <link href="~/css/Site.css" rel="stylesheet" />
    <link href="~/css/FullPackage.css" rel="stylesheet" />
</head>
<body>
    <br>
    <div class="map" style="background-image: url('/images/Vietnam/AcceuilVietnam01t.jpg');"></div>
    <br>
    @foreach (_001JIMCV.Models.Classes.Journey journey in ViewData["VietnamJourneys"] as List<_001JIMCV.Models.Classes.Journey>)
    {
        <div class="journey-container">
            <div class="journey-photo" style="background-image: url('/images/Vietnam/@journey.ImagePath');"></div>
            <div class="journey-content">
                <div class="journey-details">
                    <table>
                        <tr>
                            <th>Ville d'arrivée</th>
                            <th>Date de départ</th>
                            <th>Date de Retour</th>
                            <th>Prix</th>
                        </tr>
                        <tr>
                            <td>@journey.CityDestination</td>
                            <td>@journey.DepartureDate</td>
                            <td>@journey.ReturnDate</td>
                            <td>@journey.Price</td>
                        </tr>
                    </table>
                </div>
                <div class="journey-description">
                    @journey.Description
                </div>
            </div>
        </div>
        <br>
    }

    <input type="date" id="date-picker">

    <script src="~/js/FullPackage.js"></script>
</body>
</html>