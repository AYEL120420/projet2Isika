@{
    Layout = "_LayoutJimcv";
}

@section ExtraCss{
    <link rel="stylesheet" type="text/css" href="~/Css/FullPackage.css" link />
    <link rel="stylesheet" type="text/css" href="~/Css/Site.css" link />
}

    <br>
    <div class="map" style="background-image: url('/images/Italie/AcceuilItalie01t.jpg');"></div>
    <br>
    @foreach (_001JIMCV.Models.Classes.Journey journey in ViewData["ItalieJourneys"] as List<_001JIMCV.Models.Classes.Journey>)
    {
        <div class="journey-container">
            <div class="journey-photo" style="background-image: url('@journey.ImagePath');"></div>
            <div class="journey-content">
                <div class="journey-details">
                    <table>
                        <tr>
                            <th>Ville d'arrivée</th>
                            <th>Date de départ</th>
                            <th>Date de Retour</th>
                            <th>Prix</th>
                        </tr>
                        <tr>
                            <td>@journey.CityDestination</td>
                            <td>@journey.DepartureDate</td>
                            <td>@journey.ReturnDate</td>
                            <td>@journey.Price</td>
                        </tr>
                    </table>
                </div>
                <div class="journey-description">
                    @journey.Description
                </div>
            </div>
        </div>
        <br>
    }
