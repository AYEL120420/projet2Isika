@model _001JIMCV.Models.Classes.Accommodation

<table border="1" style="width:100%">
    <tr>
        <th>Pays</th>
        <th>Ville</th>
        <th>Type</th>
        <th>Adresse</th>
        <th>De</th>
        <th>A</th>
        <th>Prix</th>
        <th>Description</th>
        <th>Image</th>
        <th>Actions</th>
    </tr>

    @foreach (_001JIMCV.Models.Classes.Accommodation accommodation in ViewData["Accommodations"] as List<_001JIMCV.Models.Classes.Accommodation>)
    {
        <tr>
            <td>@accommodation.Pays</td>
            <td>@accommodation.Ville</td>
            <td>@accommodation.Type</td>
            <td>@accommodation.Adresse</td>
            <td>@accommodation.De</td>
            <td>@accommodation.A</td>
            <td>@accommodation.Prix</td>
            <td>@accommodation.Description</td>
            <td>@(accommodation).Image != null ? "Image présente" : "Aucune image")</td>
            <td style="width: 140px;">
                <form action="@Url.Action("EditService", "Service", new { id = accommodation.Id })" method="get">
                    <button type="submit">Modifier</button>
                </form>
                <form action="@Url.Action("DeleteService", "Service", new { id = accommodation.Id })" method="post">
                    <button type="submit">Supprimer</button>
                </form>
            </td>
        </tr>
    }
</table>

