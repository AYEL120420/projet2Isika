@model _001JIMCV.Models.Classes.Accommodation
@{
    var StatusList = Enum.GetValues(typeof(_001JIMCV.Models.Classes.Enum.StatusEnum))
    .Cast<_001JIMCV.Models.Classes.Enum.StatusEnum>()
    .Select(e => new SelectListItem
            {
                Value = e.ToString(),
                Text = e.ToString()
            })
    .ToList();
}


<table border="1" style="width:60%">
    <tr>
        <th>Pays</th>
        <th>Ville</th>
        <th>Type</th>
        <th>Adresse</th>
        <th>De</th>
        <th>A</th>
        <th>Prix</th>
        <th>Description</th>
        <th>Statut</th>
        
    </tr>

    @foreach (_001JIMCV.Models.Classes.Accommodation accommodation in ViewData["Accommodations"] as List<_001JIMCV.Models.Classes.Accommodation>)
    {
        <tr>
            <td>@accommodation.Pays</td>
            <td>@accommodation.Ville</td>
            <td>@accommodation.Type</td>
            <td>@accommodation.Adresse</td>
            <td>@accommodation.De</td>
            <td>@accommodation.A</td>
            <td>@accommodation.Prix</td>
            <td>@accommodation.Description</td>
            <td>
                <select name="status" id="status">
                    @foreach (var status in StatusList)
                    {
                        <option value="@status.Value" @(status.Value == accommodation.Status ? "selected" : "")>@status.Text</option>
                    }
                </select>
            </td>


         
            <td style="width: 60px;">
                <form action="@Url.Action("EditAccommodation", "Accommodation", new { id = accommodation.Id })" method="get">
                    <button type="submit">Modifier</button>
                </form>
                </td>
            <td style="width: 70px;">
                <form action="@Url.Action("DeleteAccommodation", "Accommodation", new { id = accommodation.Id })" method="post">
                    <button type="submit">Supprimer</button>
                </form>
            </td>
        </tr>
    }
</table>

