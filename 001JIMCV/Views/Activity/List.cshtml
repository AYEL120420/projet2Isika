@model List<_001JIMCV.Models.Classes.Activity>
@{
    Layout = "_LayoutJimcv";
}

<table border="1" style="width:60%">
    <tr>
        <th>Pays</th>
        <th>Ville</th>
        <th>Type</th>
        <th>Adresse</th>
        <th>Date</th>
        <th>Localisation</th>
        <th>Prix</th>
        <th>Description</th>
        <th>Statut</th>
    </tr>

    @foreach (_001JIMCV.Models.Classes.Activity activity in ViewData["Activities"] as List<_001JIMCV.Models.Classes.Activity>)
    {
        <tr>
            <td>@activity.Pays</td>
            <td>@activity.Ville</td>
            <td>@activity.Nom</td>
            <td>@activity.Date</td>
            <td>@activity.Localisation</td>
            <td>@activity.Prix</td>
            <td>@activity.Description</td>
            <td>@activity.Status </td>
            <td style="width: 60px;">
                <form action="@Url.Action("EditActivity", "Activity", new { id = activity.Id })" method="get">
                    <button type="submit">Modifier</button>
                </form>
            </td>
            <td style="width: 70px;">
                <form action="@Url.Action("DeleteActivity", "Activity", new { id = activity.Id })" method="post">
                    <button type="submit">Supprimer</button>
                </form>
            </td>
        </tr>
    }
</table>
<boutton>@Html.ActionLink("Ajouter", "ActivityForm", "Activity")</boutton>