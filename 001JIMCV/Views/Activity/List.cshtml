@model List<_001JIMCV.Models.Classes.Activity>
@{
    Layout = "_LayoutJimcv";
}

@section ExtraCss{
    <link rel="stylesheet" type="text/css" href="~/Css/Table.css" link />
}

<br />

<table>
    <tr>
        <th>Nom partenaire</th>
        <th>Adresse Email</th>
        <th>Pays</th>
        <th>Ville</th>
        <th>Type</th>
        <th>Date</th>
        <th>Localisation</th>
        <th>Description</th>
        <th>Prix</th> 
        <th>Image</th>
        <th>Statut</th>
        <th>Modifier</th>
        <th>Supprimer</th>
    </tr>

    @foreach (_001JIMCV.Models.Classes.Activity activity in ViewData["Activities"] as List<_001JIMCV.Models.Classes.Activity>)
    {
        <tr>
            <td>@activity.ProviderName</td>
            <td>@activity.ProviderEmail</td>
            <td>@activity.Country</td>
            <td>@activity.City</td>
            <td>@activity.Name</td>
            <td>@activity.Date</td>
            <td>@activity.Adress</td>
            <td>@activity.Description</td>
            <td>@activity.Price</td>    
            <td>@activity.Image</td>
            <td>@activity.Status </td>
            <td>
                <form action="@Url.Action("EditActivity", "Activity", new { id = activity.Id })" method="get">
                    <button type="submit">Modifier</button>
                </form>
            </td>
            <td>
                <form action="@Url.Action("DeleteActivity", "Activity", new { id = activity.Id })" method="post">
                    <button type="submit">Supprimer</button>
                </form>
            </td>
        </tr>
    }
</table>
<br />
<br />
<button>@Html.ActionLink("Ajouter", "ActivityForm", "Activity")</button>